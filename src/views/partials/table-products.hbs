<div id="productsContainer">
    {{#if products}}
        <div id="productTable" class="table table-responsive">
            <table class="table table-dark">
                <thead>
                <tr style="color: yellow;">
                    <th>imagen</th>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                </tr>
                </thead>
                <tbody id="productsContent">
                {{#each products}}
                    <tr>
                        <td><img width="30px" src="{{ this.foto}}" alt="{{ this.nombre }}"></td>
                        <td>{{ this.codigo }}</td>
                        <td>{{ this.nombre }}</td>
                        <td>{{ this.descripcion }}</td>
                        <td>{{ this.precio }}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    {{else}}
        <h3 class="alert alert-warning">No se encontraron productos</h3>
    {{/if}}

</div>




